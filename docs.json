{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "maple",
  "name": "PIM Guide",
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "favicon": "/favicon.svg",
  "colors": {
    "primary": "#ff6900",
    "light": "#ff8905",
    "dark": "#f54900"
  },
  "api": {
    "baseUrl": "https://pim.finance.gov.mv/api/v1",
    "auth": {
      "method": "bearer"
    },
    "playground": {
      "mode": "simple"
    },
    "api": "/api-reference/api.json"
  },
  "appearance": {
    "default": "light",
    "theme": "system"
  },
  "topbarLinks": [
    {
      "name": "Documentation",
      "url": "https://pim.finance.gov.mv/docs"
    }
  ],
  "topbarCtaButton": {
    "name": "Dashboard",
    "url": "https://pim.finance.gov.mv"
  },
  "navigation": {
    "dropdowns": [
      {
        "dropdown": "API Reference",
        "icon": "square-terminal",
        "pages": [
          {
            "group": "Getting Started",
            "icon": "rocket",
            "pages": ["introduction", "authentication"]
          },
          {
            "group": "Core Resources",
            "icon": "building",
            "pages": [
              {
                "group": "Projects",
                "icon": "folder",
                "pages": [
                  "api-reference/projects/list",
                  "api-reference/projects/get"
                ]
              },
              {
                "group": "Initiative Functions",
                "icon": "list-check",
                "pages": [
                  "api-reference/functions/list",
                  "api-reference/functions/get",
                  "api-reference/functions/initiatives"
                ]
              },
              {
                "group": "Contracts",
                "icon": "file-contract",
                "pages": [
                  "api-reference/contracts/list",
                  "api-reference/contracts/get"
                ]
              }
            ]
          },
          {
            "group": "Location Resources",
            "icon": "map",
            "pages": [
              {
                "group": "Constituencies",
                "icon": "landmark",
                "pages": [
                  "api-reference/constituencies/list",
                  "api-reference/constituencies/get"
                ]
              },
              {
                "group": "Atolls",
                "icon": "water",
                "pages": [
                  "api-reference/atolls/list",
                  "api-reference/atolls/get",
                  "api-reference/atolls/initiatives"
                ]
              },
              {
                "group": "Islands",
                "icon": "island-tropical",
                "pages": [
                  "api-reference/islands/list",
                  "api-reference/islands/get",
                  "api-reference/islands/initiatives"
                ]
              },
              {
                "group": "Locations",
                "icon": "location-dot",
                "pages": ["api-reference/locations/list"]
              }
            ]
          }
        ]
      }
    ]
  },
  "navbar": {
    "primary": {
      "type": "button",
      "label": "PIMs",
      "href": "https://pim.finance.gov.mv"
    }
  },
  "footerSocials": {
    "website": "https://pim.finance.gov.mv"
  }
}
